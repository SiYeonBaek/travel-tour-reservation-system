<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="p">
		<!-- 방명록 전체조회 -->
	<select id="product_list" resultType="vo.ProductVO">
		select * from product order by pidx desc
	</select>
	
	<!-- A상품조회 -->
		<select id="product_list2" parameterType="int" resultType="vo.ProductVO">
			select * from product where pidx=#{pidx}
		</select>
		
			<!-- 테이블조회 -->
					<select id="product_list3" parameterType="String" resultType="vo.ProductVO">
				select * from product where PMOVE=#{date}
			</select>
			
						<!-- 테이블조회 -->
					<select id="product_list4" parameterType="int" resultType="vo.ProductVO">
				select * from product where pidx=#{pidx}
			</select>
		
</mapper>












